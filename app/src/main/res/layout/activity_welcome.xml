<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_back_act"
    tools:context=".Activityes.WelcomeActivity">

    <ViewSwitcher
        android:id="@+id/view_switcher_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="ДОБРО ПОЖАЛОВАТЬ"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_gravity="end"
                android:layout_marginTop="108dp"
                android:src="@drawable/image_1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/frame_1000000730"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn1"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="136dp"
                app:cornerRadius="13dp"
                android:text="Начать"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginTop="37dp"
                android:src="@drawable/image_2"/>

            <TextView
                android:layout_width="216dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:text="Начнем путешествие"
                android:textColor="@color/white"
                android:textSize="30sp" />

            <TextView
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="Умная, великолепная и модная коллекция Изучите сейчас"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/frame_1000000730__1_"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn2"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="136dp"
                app:cornerRadius="13dp"
                android:text="Далее"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>

    </ViewSwitcher>

    <ViewSwitcher
        android:id="@+id/view_switcher_2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_marginTop="37dp"
                android:src="@drawable/image_3"/>

            <TextView
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:text="У вас есть сила, чтобы"
                android:textColor="@color/white"
                android:textSize="34dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="271dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:gravity="center_horizontal"
                android:text="В вашей комнате много красивых и привлекательных растений"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:src="@drawable/frame_1000000730__2_"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn3"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:backgroundTint="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="136dp"
                app:cornerRadius="13dp"
                android:text="Далее"
                android:textColor="@color/black"
                android:layout_marginHorizontal="20dp"/>

        </LinearLayout>
    </ViewSwitcher>

</androidx.constraintlayout.widget.ConstraintLayout>